<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ListOfFriends" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#DDBBFF</item>
        <item name="colorPrimaryVariant">#E7CFFF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:actionBarSize">1dp</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/tajawal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="WriteFont">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#393535</item>
        <item name="android:fontFamily">@font/patric_hand</item>
    </style>

    <style name="FontFriendsViewHolder">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="maxLines">1</item>
    </style>

</resources>